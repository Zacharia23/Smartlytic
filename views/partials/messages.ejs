<% if(typeof errors != 'undefined') { %> 
    <% errors.forEach(function(error) { %>
        <div class="alert alert-danger alert-dismissible" id="notification">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                &times;
            </button>
            <%- error.msg %>
        </div>
    <% }); %> 
<% } %>

<% if(success_msg != '' ) { %>
    <div class="alert alert-success alert-dismissible" id="notification">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
            &times;
        </button>
        <%- success_msg %>
    </div>
<% } %>

<% if(error_msg != '' ) { %>
    <div class="alert alert-warning alert-dismissible" id="notification">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
            &times;
        </button>
        <%- error_msg %>
    </div>
<% } %>

<% if(error != '' ) { %>
    <div class="alert alert-warning alert-dismissible" id="notification">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
            &times;
        </button>
        <%- error %>
    </div>
<% } %>